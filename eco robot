<body>

<div id="phone-container">
    <div id="header">SGX Sustain Invest: Eco-Robot</div>
    <div id="chat-box" id="chatBox">
        <div class="msg bot">Hello! I'm your <b>Eco-Robot</b>. Ready to turn your sustainability interest into action? [cite: 174, 190]</div>
        <div class="msg bot">Adjust the slider below to tell me your ESG priority, and I'll suggest a portfolio. [cite: 172]</div>
    </div>
    
    <div id="controls">
        <div class="slider-label"><span>Focus: Financial Returns</span><span>Focus: Sustainability</span></div>
        <input type="range" id="esgSlider" min="0" max="100" value="50">
        <button onclick="generateAdvice()">Generate Portfolio Insight</button>
    </div>
</div>

<script>
    function generateAdvice() {
        const slider = document.getElementById('esgSlider').value;
        const chatBox = document.getElementById('chat-box');
        
        let userMsg = document.createElement('div');
        userMsg.className = 'msg user';
        userMsg.innerText = `My ESG Priority Level: ${slider}%`;
        chatBox.appendChild(userMsg);

        setTimeout(() => {
            let botMsg = document.createElement('div');
            botMsg.className = 'msg bot';
            
            if (slider < 40) {
                botMsg.innerHTML = "<b>Conservative Growth:</b> I suggest high-yield Green Bonds. You get 12.6% avg returns with low volatility. [cite: 70, 197]";
            } else if (slider >= 40 && slider <= 70) {
                botMsg.innerHTML = "<b>Balanced Impact:</b> I recommend a mix of ESG ETFs and Water Purity funds. [cite: 164, 197]";
            } else {
                botMsg.innerHTML = "<b>High Impact:</b> We'll focus on IFRS S1/S2 compliant stocks with the lowest carbon footprints. [cite: 139, 174]";
            }
            
            chatBox.appendChild(botMsg);
            chatBox.scrollTop = chatBox.scrollHeight;
        }, 800);
    }
</script>

</body>
