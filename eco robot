        #phone-container { width: 350px; height: 650px; background: white; border-radius: 30px; border: 8px solid #333; overflow: hidden; display: flex; flex-direction: column; position: relative; }
        #header { background: var(--sgx-green); color: white; padding: 20px; text-align: center; font-weight: bold; }
        #chat-box { flex: 1; padding: 15px; overflow-y: auto; background: var(--light-grey); font-size: 14px; }
        .msg { margin-bottom: 12px; padding: 10px; border-radius: 10px; max-width: 80%; line-height: 1.4; }
        .bot { background: white; color: #333; border: 1px solid #ddd; align-self: flex-start; }
        .user { background: var(--sgx-green); color: white; margin-left: auto; align-self: flex-end; }
        #controls { padding: 15px; background: white; border-top: 1px solid #ddd; }
